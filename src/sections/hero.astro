---
import Button from '../components/Button.astro';
import Indicator from '../components/Indicator.astro';
import Forest from '../components/icons/forest.astro';
---

<div class="mb-8 p-8 h[820px]">
    <div class="relative w-fit mx-auto">
        <Forest />
        <Indicator text="Projects" link="#projects" orientation="to-left" />
        <Indicator text="Skills" link="#skills" orientation="to-left" />
        <Indicator text="Notes" link="#notes" orientation="to-right" />
    </div>
    <div class="text-center">
        <h2 class="text-2xl mt-8 mb-6">José Sánchez</h2>
        <h1 class="text-4xl mb-4">Software Developer</h1>
        <p class="max-w-[640px] mx-auto text-lg pb-8">
            Entusiasmado por crear aplicaciones de gran impacto y relevancia
            basado en el buen diseño y orientado hacia las buena práctica y
            experiencia de usuario
        </p>
        <Button type="filled">
            Let's Talk
        </Button>
    </div>
</div>
